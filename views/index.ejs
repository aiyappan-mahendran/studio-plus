<!DOCTYPE html>
<html>
  <head>
    <title>Studio Plus</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- CSS -->
    <link rel="stylesheet" href="libs/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="libs/trNgGrid/release/trNgGrid.min.css">
    <link rel="stylesheet" href="libs/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/login.css"> <!-- custom styles -->
    <link rel="stylesheet" href="libs/toastr/toastr.min.css">
    <link rel="stylesheet" href="css/styles.css">

    <!-- JS -->
    <script src="libs/angular/angular.min.js"></script>
    <script src="libs/angular-resource/angular-resource.min.js"></script>
    <script src="libs/angular-cookies/angular-cookies.min.js"></script>
    <script src="libs/angular-bootstrap/ui-bootstrap-tpls.min.js"></script>
    <script src="libs/angular-ui-router/release/angular-ui-router.min.js"></script>
    <script src="libs/jquery/dist/jquery.min.js"></script>
    <script src="libs/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="libs/trNgGrid/release/trNgGrid.min.js"></script>
    <script src="libs/toastr/toastr.min.js"></script>

    <!-- ANGULAR CUSTOM -->
    <script src="js/controllers/LoginCtrl.js"></script>
    <script src="js/controllers/MainCtrl.js"></script>
    <script src="js/controllers/ProductCtrl.js"></script>
    <script src="js/controllers/CustomerCtrl.js"></script>
    <script src="js/controllers/SignupCtrl.js"></script>
    <script src="js/controllers/NavCtrl.js"></script>
    <script src="js/directives.js"></script>
    <script src="js/services.js"></script>
    <script src="js/appRoutes.js"></script>
    <script src="js/routingConfig.js"></script>
    <script src="js/app.js"></script>
    <script type="text/javascript">
        toastr.options = {
            "closeButton": false,
            "debug": false,
            "progressBar": false,
            "positionClass": "toast-bottom-center",
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
        </script>	
  </head>

  <body ng-app="sampleApp">
<!-- Navigation bar start -->  
    <nav class="navbar navbar-inverse navbar-fixed-top" ng-controller="NavController" access-level="accessLevels.user">
      <div class="container-fluid">
        <div class="navbar-header" access-level="accessLevels.user">
            <a class="navbar-brand" ui-sref="home">Studio Plus</a>
        </div>
        <!-- Dynamic menus -->
        <ul ng-repeat="menu in menus" class="nav navbar-nav" access-level="{{menu.accessLevel}}">
            <li><a ui-sref="{{menu.uisref}}">{{menu.title}}</a></li>
        </ul>        
	
        <div>
			<ul class="nav pull-right">
                <div class="btn-group open">
                  <a class="btn btn-default"><i class="fa fa-user fa-fw"></i> User</a>
                  <a class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    <span class="fa fa-caret-down"></span></a>
                  <ul class="dropdown-menu">
                    <li><a href="#/" ng-click="logout()"><i class="fa fa-power-off fa-fw"></i> Logout</a></li>
                  </ul>
                </div>                
		      </ul>		  
        </div>
      </div>
    </nav>
 <!-- Navigation bar end -->
 <hr>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
			<div ui-view></div>
        </div>
        <div id="alertBox" data-ng-show="error" class="alert alert-danger">
          <button type="button" data-ng-click="error = null;" class="close">&times;</button><span data-ng-bind="error"></span>
        </div>
      </div>
    </div>
  </body>
</html>

