  </head>

  <body ng-app="sampleApp">
<!-- Navigation bar start -->  
    <nav class="navbar navbar-inverse navbar-fixed-top" ng-controller="NavController" access-level="accessLevels.user">
      <div class="container-fluid">
        <div class="navbar-header" access-level="accessLevels.user">
            <a class="navbar-brand" ui-sref="home">Studio Plus</a>
        </div>
        <!-- Dynamic menus -->
        <ul ng-repeat="menu in menus" class="nav navbar-nav" access-level="{{menu.accessLevel}}">
            <li><a ui-sref="{{menu.uisref}}">{{menu.title}}</a></li>
        </ul>        
	
        <div>
			<ul class="nav pull-right">
				<li class="dropdown">
					<a href="#" role="button" class="dropdown-toggle" data-toggle="dropdown"> 
					<p>
						<span class="glyphicon glyphicon-user"></span> 
						Guest
						<span class="glyphicon glyphicon-chevron-down"></span>
					</p>
					</a>
					<ul class="dropdown-menu">
						<li><a href="#/" ng-click="profile()">Profile</a></li>
						<li class="divider"></li>
						<li><a href="#/" ng-click="logout()">Logout</a></li>
					</ul>
				</li>
		</ul>		  
        </div>
      </div>
    </nav>
 <!-- Navigation bar end -->
 <hr><hr><hr>
    <div class="container">
      <div class="row">
        <div class="col-md-15">
			<div ui-view></div>
        </div>
      </div>
    </div>
  </body>
